---
import { cva, type VariantProps } from "class-variance-authority";

import { cn } from "../lib/utils";
const { class: className, size, variant, ...props } = Astro.props;

const buttonVariants = cva(
    "inline-flex items-center justify-center whitespace-nowrap rounded-full text-sm font-medium ring-offset-white transition-colors disabled:pointer-events-none disabled:opacity-50",
    {
        variants: {
            variant: {
                default: "bg-primary text-primary-foreground hover:bg-primary-400",
                outline: "border border-primary bg-white text-primary hover:bg-primary-50 hover:text-primary-400",
            },
            size: {
                default: "h-10 px-4 py-2",
                sm: "h-9 rounded-full px-3",
                lg: "h-11 rounded-full px-8",
                icon: "h-10 w-10",
            },
        },
        defaultVariants: {
            variant: "default",
            size: "default",
        },
    }
);
---

<button class={cn(buttonVariants({ variant, className, size }))} {...props}>
    <slot />
</button>
